%layout 'xmltemplate';

% my $domain = 'http://www.nastartshop.ru';
% foreach my $key (@{$pages}){
<url>
% my @directory = ('catalog','about');
% my @pagetype = ('/','.html');
% my $location = "$domain/$directory[$key->{'type'}]/$key->{'url'}$pagetype[$key->{'type'}]";
	<loc><%= $location %></loc>
	<lastmod><%= $key->{'lastmod'} %></lastmod>
	<changefreq><%= $key->{'changefreq'} %></changefreq>
	<priority><%= $key->{'priority'} %></priority>
</url>
%}
% foreach my $key (@{$products}){
<url>
	<loc><%= $domain %>/catalog/<%= $key->{'caturl'} %>/<%= $key->{'url'} %>.html</loc>
	<changefreq>weekly</changefreq>
	<priority>1.0</priority>
</url>
%}
