  <body>

<div class="modal hide" id="myModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3>Обратный звонок</h3>
  </div>
  <div class="modal-body">
    Перезвоните мне на номер +7 <input type="text" name="phone" class="input-medium"/>
	<!--br/>по поводу: <input type="text" name="phone" class="input-large"/-->
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Закрыть</a>
    <a href="#" class="btn btn-primary">Жду звонка</a>
  </div>
</div>

<div class="container">
% my %active_link=();
% $active_link{$catlink->{'url'}}='class="active"';
<div class="top-links">
	<ul class="nav nav-pills">
		<li <%==$active_link{'dsk-slide'}%>><%= link_to "Распорные спортивные комплексы" => '/dsk-slide/'%></li>
		<li <%==$active_link{'dsk-wall'}%>><%= link_to "Пристенные спортивные комплексы" => '/dsk-wall/'%></li>
		<li <%=$active_link{'dsk-wall'}%>><%= link_to "Трёхколёсные велосипеды" => '/dsk-wall/'%></li>
		<li <%=$active_link{'dsk-wall'}%>><%= link_to "Где купить?" => '/dsk-wall/'%></li>
				<li><%= link_to "Гарантия" => '/dsk-wall/'%></li>
				<li><%= link_to "Доставка и оплата" => '/dsk-wall/'%></li>
	</ul>
<hr>
	</div>
		<div class="row">
			<div class="span3">
<p align=center><a href="/"><img src="/images/logo.png" border=0 title="Переход на главную страницу" alt="Логотип интернет-магазина НаСтарт.рф"></a><br/>
<a href="/"><span class="logotype">НаСтарт.рф</span></a><br/>
<em>интернет-магазин</em></p>
			</div><div class="span5">
		<p align=center>
% #Cart information
% my $cartinfo=0;
% my @productid = keys session->{'cart'} if session->{'cart'};
% foreach my $key (@productid){
%	$cartinfo=$cartinfo+session->{'cart'}{$key};
% }
% if($cartinfo==0){
	<img src="/images/emptycart.png" border=0 title="Пожалуйста, заполните корзину" alt="Корзина пока пуста">
	<p align=center>Корзина пока пуста :(</p>
% }else{
	<a href="/cart/"><img src="/images/fuelcart.png" border=0 title="Открыть корзину" alt="Переход в корзину"></a>
	<p align=center><a href="/cart/">Товаров в корзине</a> <span class="badge badge-info"><%= $cartinfo %></span></p>
% }
		</p>
			</div><div class="span4">
				<div class="pull-right" align=right>
					<p><em>Режим работы: Пн-Сб с 10 до 20<br/>обработка заказов на сайте: круглосуточно</em></p>
					<font style="font-size:24px">+7 (391) <strong>29-202-29</strong></font>
					<br/><a href="#myModal" data-toggle="modal">заказать обратный звонок</a>
				</div>
			</div>
		</div>

	<%=content%>

	<footer>
	<hr>
		<div id="footer-links"><center>
			<%= link_to "Распорные спортивные комплексы" => '/dsk-wall/' %> |
			<%= link_to "Пристенные спортивные комплексы" => '/dsk-wall/' %> |
